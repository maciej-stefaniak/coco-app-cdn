[
        {% for post in paginator.results %}
            {
                "title": "{{ post.title }}",
                "description": "{{ post.summary }}",
                "link": "{{ url('blog_post', {'slug': post.slug}) }}",
                "pubDate": "{{ post.publishedAt|date(format='r', timezone='GMT') }}",
                "tags": [
                {% for tag in post.tags %}
                    "{{ tag.name }}"{% if not  loop.last %},{% endif %}
                {% endfor %}
                ]
                {% if post.imageName %},
                "image": "{{ absolute_url(asset(vich_uploader_asset(post))) }}"
                {% endif %}
            }{% if not  loop.last %},{% endif %}
        {% endfor %}
]